{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "JwtSettings": {
    "SecretKey": "MyVeryLongSecretKeyForJwtTokenGeneration12345-Development",
    "ExpiryMinutes": 120
  },
  "DatabaseSettings": {
    "ConnectionString": "Data Source=appdb-dev.sqlite",
    "CommandTimeout": 60,
    "AutoMigrate": true,
    "SeedData": true,
    "LogLevel": "Information",
    "EnableSensitiveDataLogging": true
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001", 
      "http://localhost:4200",
      "http://localhost:5099",
      "https://localhost:5099"
    ],
    "PreflightMaxAge": 86400,
    "ExposedHeaders": [ "X-Total-Count", "X-Page-Count" ]
  }
}
